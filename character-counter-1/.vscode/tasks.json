{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "echo": true,
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "npm run test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$mocha"],
      "presentation": {
        "reveal": "always",
        "echo": true,
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}